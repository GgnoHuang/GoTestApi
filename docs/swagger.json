{
    "swagger": "2.0",
    "info": {
        "description": "最小可行性字串 API，支援 GET/POST 並有 Swagger 文件",
        "title": "字串 API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/string": {
            "get": {
                "description": "取得資料庫中最新一筆字串",
                "tags": [
                    "string"
                ],
                "summary": "取得最新字串",
                "responses": {
                    "200": {
                        "description": "最新字串",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "儲存一個新的字串到資料庫",
                "consumes": [
                    "text/plain"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "string"
                ],
                "summary": "儲存字串",
                "parameters": [
                    {
                        "description": "字串內容",
                        "name": "data",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}